@model List<Order>
@{
    ViewData["Title"] = "Get All Orders";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Order List</h2>

    <!-- Display TempData messages for success or error -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Orders Table -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Total Amount</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var order in Model)
                        {
                            <tr onmouseover="this.style.backgroundColor='#f1f3f4';" onmouseout="this.style.backgroundColor='';">
                                <td>@order.OrderId</td>
                                <td>@order.OrderDate.ToString("MMMM dd, yyyy")</td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td class="text-center">
                                    <!-- View Button -->
                                    <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-outline-info btn-sm me-2">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <!-- Delete Button -->
                                    <form asp-action="DeleteOrder" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip({
                html: true // Enable HTML content in the tooltip
            });
        });
    </script>
}
