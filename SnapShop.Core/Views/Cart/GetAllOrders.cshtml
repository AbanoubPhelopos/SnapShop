@model List<Order>
@{
    ViewData["Title"] = "GetAllOrders";
}
<div class="card-header bg-secondary bg-gradient ml-0 py-4">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="py-2 text-white"><i class="bi bi-list-check"></i> Order List</h2>
        </div>
    </div>
</div>


    <!-- Display TempData messages for success or error -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Orders Table -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <!-- Delete Button -->
                        <form asp-action="DeleteOrder" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="orderId" value="@order.OrderId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No orders found.</td>
            </tr>
        }
    </tbody>
</table>
