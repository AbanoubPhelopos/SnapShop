@using SnapShop.Core.ViewModels.Cart

@model CheckoutViewModel

<div class="container mt-5">
    <!-- Card Header with Background and Gradient -->
    <div class="card">
        <div class="card-header bg-secondary bg-gradient py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Checkout</h2>
                </div>
            </div>
        </div>

        <!-- Card Body with Order Details -->
        <div class="card-body">
            <div class="row">
                <div class="col-12 text-center">
                    <h2>Thank you for your purchase!</h2>
                    <h4>Order Details</h4>
                </div>
            </div>

            <!-- Order Information -->
            <div class="row mt-3">
                <div class="col-md-6 offset-md-3">
                    <p><strong>Order ID:</strong> @Model.OrderId</p>
                    <p><strong>Order Date:</strong> @DateTime.UtcNow.ToString("MM/dd/yyyy")</p>
                    <h4>Total Amount: <strong>@Model.TotalAmount  $</strong></h4>
                </div>
            </div>

            <!-- Continue Shopping Button -->
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <a asp-controller="Cashier" asp-action="Index" class="btn btn-outline-primary">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</div>
